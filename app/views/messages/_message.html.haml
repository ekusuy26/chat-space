.chat-main__messages__message
  .chat-main__messages__message__upper-box
    .chat-main__messages__message__upper-box__name
      = message.user.nickname
    .chat-main__messages__message__upper-box__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__messages__message__under-box
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?